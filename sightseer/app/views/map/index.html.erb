<!DOCTYPE html>
<html>
  <head>
    <title>Map</title>
    <meta charset="utf-8">
    <%= javascript_include_tag "application" %>
    <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 100%;
        float: left;
        width: 60%;

      }
      #panel {
        padding: 20px;
        float: left;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <div id="panel">
      <b>Mode of Transportation</b>
      <select id="travelMode">
        <option value="DRIVING">Driving</option>
        <option value="TRANSIT">Public Transit</option>
        <option value="WALKING">On Foot</option>
      </select>
      <b>Start:</b>
      <input type="text" id="start" value="White Rock, BC">
      <br>
      <b id="waypointsHeader">Waypoints:</b>
      <select multiple size="12" id="waypoints">
        <option value="Stanley park, BC">Stanley Park</option>
        <option value="Science World Vancouver">Science World</option>
        <option value="SFU, BC">Simon Fraser University, Burnaby Mountain Campus</option>
        <option value="SFU surrey, BC">Simon Fraser University, Surrey Campus</option>
        <option value="Vancouver Aquarium">Vancouver Aquarium</option>
        <option value="Vancouver Convention Centre">Vancouver Convention Centre</option>
        <option value="Capilano Suspension Bridge">Capilano Suspension Bridge</option>
        <option value="777 Pacific Blvd Vancouver, BC">BC Place</option>
        <option value="750 Hornby St Vancouver, BC">Vancouver Art Gallery</option>
        <option value="Granville Island">Granville Island</option>
        <option value="8811 River Rd, Richmond, BC">River Rock Casino</option>
        <option value="YVR">Vancouver International Airport</option>
      </select>
      <br>
      <b>End:</b>
      <input type="text" id="end" value="SFU, BC">
      <br>
      <input type="submit" id="submit">
      <p id="errorBox"></p>
    </div>
    <script>
      var map;

      //waypoints are hidden from user when public transit is selected
      var hideWaypts = function() {
        if (document.getElementById('travelMode').value == "TRANSIT") {
          document.getElementById('waypoints').style.display = 'none';
          document.getElementById('waypointsHeader').style.display = 'none';
        } else {
          document.getElementById('waypoints').style.display = 'initial';
          document.getElementById('waypointsHeader').style.display = 'initial';
        }
      }
      document.getElementById('travelMode').addEventListener('change', hideWaypts);


      function initMap() {
        var directionsService = new google.maps.DirectionsService;
        var directionsDisplay = new google.maps.DirectionsRenderer;

        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 49.278947, lng: -122.916525},
          zoom: 14
        });
        directionsDisplay.setMap(map);

        var makeRoute = function() {
          calculateAndDisplayRoute(directionsService, directionsDisplay);
        };

        document.getElementById('submit').addEventListener("click", makeRoute);
      }

      function calculateAndDisplayRoute(directionsService, directionsDisplay) {

        var waypts = []; //will collect the chosed waypoints
        var wayptsAll = document.getElementById('waypoints');

        //Waypoints are disabled if user is using public transit
        //Adds selected waypoints to waypts
        if (document.getElementById('travelMode').value !== "TRANSIT") {
          for (var i = 0; i < wayptsAll.length; i++) {
            if (wayptsAll.options[i].selected) {
              waypts.push({
                location: wayptsAll[i].value,
                stopover: true
              });
            }
          }
        }


        directionsService.route({
          origin: document.getElementById("start").value,
          destination: document.getElementById("end").value,
          waypoints: waypts,
          optimizeWaypoints: true,
          travelMode: google.maps.TravelMode[document.getElementById("travelMode").value]
        },
        function(response, status) {
          if (status === google.maps.DirectionsStatus.OK) {
            document.getElementById('errorBox').innerHTML = '';
            directionsDisplay.setDirections(response);
          } else {
            document.getElementById('errorBox').innerHTML = 'Error: ' + status;
          }
        })
      }

    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDaU5DbGvX_-OOZwj-az4zT4iC6gp8MmQQ&callback=initMap"
    async defer></script>
  </body>
</html>
