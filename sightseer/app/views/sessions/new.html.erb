<h1>Welcome to Siteseers!</h1><div>
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %> </p>
<% end %>
<%= form_tag do %>
<fieldset>
  <legend> 
  Log In  
  </legend>
  <div>
  <%= label_tag :name, 'Name' %>
  <%= text_field_tag :name, params[:name] %>
  <%= label_tag :password, 'Password' %>
  <%= password_field_tag :password, params[:password] %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
</fieldset>
<% end %>
</div>

<%= link_to 'Not a member? Sign up here!', new_user_path %>

